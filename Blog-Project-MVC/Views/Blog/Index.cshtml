@model IEnumerable<Blog_Project_MVC.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>Blog Home Page</h2>

<table class="table">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <b style="color: brown; font-size: large">@Html.DisplayFor(modelItem => item.Btitle)</b>
                @Html.DisplayFor(modelItem => item.BDesc)
            </td>
        </tr>
        <tr>
            <td>
                <a href="~/Blog/@item.BUrl">Read Complete Article</a>
            </td>
        </tr>
        <tr>
            <td>
                Category <a href="~/Blog/@item.BCategory">@Html.DisplayFor(modelItem => item.BCategory)</a>
            </td>

        </tr>
    }

</table>
